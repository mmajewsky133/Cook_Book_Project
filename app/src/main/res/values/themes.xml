<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CookBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorLight</item>
        <item name="colorPrimaryVariant">@color/primaryLightColorLight</item>
        <item name="colorOnPrimary">@color/primaryTextColorLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorLight</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorLight</item>
        <item name="colorOnSecondary">@color/secondaryTextColorLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/colorSurfaceLight</item>
    </style>
